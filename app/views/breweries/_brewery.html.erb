<div id="<%= dom_id brewery %>">
  <p>
    <strong>Name:</strong>
    <%= brewery.name %>
  </p>

  <p>
    <strong>Year:</strong>
    <%= brewery.year %>
  </p>

  <p>
    <% brewery.beers.each do |beer| %>
      <%= link_to beer.name, beer %>
    <% end %>
  </p>

  <p>
    <% if brewery.ratings.empty? %>
      <p></p>
    <% else %>
      Brewery has <%= pluralize(brewery.ratings.count, "rating") %> with an average of
      <%= brewery.average_rating%>
    <% end %>
  </p>

</div>
